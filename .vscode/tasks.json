    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build app",
            "type": "shell",
            "command": "make app",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Open workbooks",
            "type": "shell",
            "command": "make workbook"
        },
        {
            "label": "Generate filter coefficients",
            "type": "shell",
            "command": "python3 scripts/generate_resampling_filters.py"
        }
    ]
}